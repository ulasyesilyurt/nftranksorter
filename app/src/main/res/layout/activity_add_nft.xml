<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Add NFT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtNftName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NFT Name" />

            <Spinner
                android:id="@+id/spinnerImageSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Trait:"
                android:layout_marginTop="16dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtTraitKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Trait Name (e.g., Color)" />

            <EditText
                android:id="@+id/edtTraitValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Value (e.g., Red)" />

            <Button
                android:id="@+id/btnAddTrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Trait"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/txtTraitList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traits:\n"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/btnSaveNft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add NFT"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
